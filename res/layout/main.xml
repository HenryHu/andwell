<TableRow
    android:id="@+id/TableRow041"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="center" >

<Button
    android:id="@+id/bGetOAuthCode"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/loginoauth_btn"
    android:textSize="10pt" >
</Button>


</TableRow>
<TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableRow1">
<TextView android:id="@+id/tLACode" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="9pt" android:paddingLeft="4pt" android:text="@string/authcode_label"></TextView>
</TableRow>
<TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableRow2">

    <EditText
        android:id="@+id/tOAuthCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_auth_code_hint"
        android:inputType="number" >

    </EditText>
</TableRow>

<TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableRow3">

    <Button
        android:id="@+id/bLoginOAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logincode_btn"
        android:textSize="6pt" >
</Button>

</TableRow>

<TextView
    android:id="@+id/tStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_status"
    android:textSize="6pt" />

</LinearLayout>
