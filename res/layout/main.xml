<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TableRow android:layout_width="fill_parent" android:layout_gravity="center|center_horizontal" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/TableRow04" android:baselineAligned="false">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/app_shortname"
            android:textSize="12pt" >
</TextView>

    </TableRow>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3pt"
        android:text="@string/label_server_api"
        android:textSize="9pt" />

    <EditText
        android:id="@+id/tServerAPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_server_api_hint"
        android:inputType="textUri">
                <requestFocus>
                </requestFocus>
    </EditText>

