<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent"
              android:padding="10dp"
              android:orientation="vertical" android:layout_width="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <TextView android:text="Post ID: " android:id="@+id/tPrompt_inputdialog" android:layout_width="wrap_content" android:textSize="20dp" android:layout_gravity="center_vertical" android:layout_height="wrap_content"></TextView>
        <EditText android:layout_height="wrap_content" android:id="@+id/tValue_inputdialog" android:layout_width="wrap_content" android:minWidth="100dp" android:numeric="integer"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="match_parent">
        <Button android:layout_height="wrap_content" android:text="OK" android:id="@+id/bOK_inputdialog" android:layout_weight="1" android:layout_width="match_parent"></Button>
        <Button android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1" android:id="@+id/bCancel_inputdialog" android:layout_width="match_parent"></Button>
    </LinearLayout>
</LinearLayout>