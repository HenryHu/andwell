<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.henryhu.andwell"
      android:installLocation="auto">
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
    <uses-permission android:name="android.permission.INTERNET"/>
	<application android:icon="@drawable/icon" android:label="@string/app_name" android:name="AndWellApp" android:allowBackup="true">
        <activity android:name=".AndWell"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="andwell" />
            </intent-filter>
        </activity>

        <activity android:name=".Main">
            
        </activity>
        <activity android:name=".BoardsActivity"/>
        <activity android:name=".PostListActivity"/>
        <activity android:name="net.henryhu.andwell.PostViewActivity"/>
        <activity android:name="NewPostActivity"/>

    </application>
</manifest> 